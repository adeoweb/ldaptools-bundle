{
    "name": "jtborger/ldaptools-bundle",
    "type": "symfony-bundle",
    "description": "Provides easy LDAP integration for Symfony via LdapTools.",
    "keywords": [
        "LDAP",
        "Active Directory",
        "OpenLDAP",
        "Microsoft Exchange"
    ],
    "homepage": "https://github.com/jtborger/LdapToolsBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Chad Sikorra",
            "email": "Chad.Sikorra@gmail.com",
            "homepage": "http://www.chadsikorra.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jtborger/ldaptools"
        }
    ],
    "require": {
        "ldaptools/ldaptools": "v0.25.2",
        "symfony/framework-bundle": "~4.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpspec/phpspec": "^6.1",
        "doctrine/orm": "^2.7",
        "symfony/form": "~4.4",
        "symfony/security-bundle": "~4.4"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "For LDAP object type integration in Doctrine."
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {"LdapTools\\Bundle\\LdapToolsBundle\\": ""}
    }
}
